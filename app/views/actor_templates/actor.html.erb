<h1>Actor #<%= @id %> details</h1>

<a href="/actors">Go back</a>
<hr>
<dl>
  <dt>Name</dt>
  <dd><%= @actor.name %></dd>

  <dt>Dob</dt>
  <dd><%= @actor.dob %></dd>

  <dt>Bio</dt>
  <dd><%= @actor.bio %></dd>

  <dt>Image</dt>
  <dd><img src="<%= @actor.image %>"></dd>

  <dt>Created at</dt>
  <dd><%= time_ago_in_words(@actor.created_at) %></dd>

  <dt>Updated at</dt>
  <dt><%= time_ago_in_words(@actor.updated_at) %></dd>
</dl>

<hr>

<h2>Filmography</h2>
<table border="1">
  <tr>
    <td>Title</td>
    <td>Year</td>
    <td>Director</td>
    <td>Character name</td>
    <td></td>
  </tr>
  <% @characters.each do |character| %>
    <% movie = Movie.where({ :id => character.movie_id}).at(0)%>
    <% director = Director.where({ :id => movie.director_id}).at(0) %>
    <td><%= movie.title %></td>
    <td><%= movie.year %></td>
    <td><%= director.name %></td>
    <td><%= character.name %></td>
    <td><a href="/movies/<%= movie.id %>">Show details</a></td>
  <% end %>
</table>
