<h1>Director #<%= @id %> details</h1>

<a href="/directors">Go back</a>
<hr>
<p><%= @director.name %></p>
<p><%= @id %></p>

<dl>
  <dt>Name</dt>
  <dd><%= @director.name %></dd>

  <dt>Dob</dt>
  <dd><%= @director.dob %></dd>

  <dt>Bio</dt>
  <dd><%= @director.bio %></dd>

  <dt>Image</dt>
  <dd><img src="http://robohash.org/<%= @director.image %>"></dd>

  <dt>Created at</dt>
  <dd><%= @director.created_at %></dd>

  <dt>Updated at</dt>
  <dd><%= @director.updated_at %></dd>
</dl>

<hr>

<h2>Filmography</h2>

<table border="1">
  <tr>
    <td>ID</td>
    <td>Image</td>
    <td>Title</td>
    <td>Year</td>
    <td>Director</td>
    <td></td>
  </tr>
  <% @filmography.each do |film| %>
    <tr>
      <td><%= film.id %></td>
      <td><img src="<%= film.image %>"></td>
      <td><%= film.title %></td>
      <td><%= film.year %></td>
      <td><%= @director.name %></td>
      <td><a href="/movies/<%= film.id %>">Show details</a></td>
    <tr>
  <% end %>
</table>
